<!DOCTYPE html>
<html>
  <head>
    <title>Grade Book</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= root_url %>">
            <%= image_tag "rails-brand.png", size: '36x32' %>
          </a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav"><% if current_user %>
            <li class="<%= "active" if controller_name == "students" %>"><%= link_to "Students", students_path %></li>
            <li class="<%= "active" if controller_name == "homeworks" %>"><%= link_to "Homework", homeworks_path %></li>
          <% end %></ul>

          <form class="navbar-form navbar-right">
            <%- if current_user -%>
              <a class="btn btn-default" href="<%= signout_path %>" role="button">Sign out as <%= current_user.name %>.</a>
            <%- else -%>
              <a class="btn btn-default" href="/auth/github" role="button">Sign in with Github.</a>
            <%- end -%>
          </form>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
      <%= flash_messages %>
      <%= yield %>
    </div>
    <footer class="footer">
      <div class="container">
        <p class="text-muted">The Iron Yard</p>
      </div>
    </footer>
  </body>
</html>
